{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./lib/",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
  }
}